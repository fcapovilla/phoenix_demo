<h2>Show Comment</h2>

<ul>

  <li>
    <strong>Username:</strong>
    <%= @comment.username %>
  </li>

  <li>
    <strong>Content:</strong>
    <%= @comment.content %>
  </li>

  <li>
    <strong>Post:</strong>
    <%= @comment.post.title %>
  </li>

</ul>

<span><%= link "Edit", to: comment_path(@conn, :edit, @comment) %></span>
<span><%= link "Back", to: comment_path(@conn, :index) %></span>
