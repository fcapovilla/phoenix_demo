.container-fluid
  .row
    .col-md-12
      = if @changeset.action do
        .alert.alert-danger
          p= dgettext "talon", "Oops, something went wrong! Please check the errors below."
      .box.box-info
        = render "form.html", changeset: @changeset, resource: @resource, action: resource_path(@conn, @resource, :create), talon: @conn.assigns[:talon] || %{}
